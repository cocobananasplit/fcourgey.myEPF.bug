<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/vueDefaut"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone" >

        <TextView
            android:id="@+id/tvSemaine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Initialisation premiÃ¨re fois, patiente 5 secondes :)" />

        <ProgressBar
            android:id="@+id/pbTelechargement"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp" />

        <TextView
            android:id="@+id/tvTelechargement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/vueComplete"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <TextView
                android:id="@+id/tvTelechargement2"
                android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="initialisation"
	            android:layout_marginRight="5dp"
                />
	        <ProgressBar
	            android:id="@+id/pbTelechargement2"
	            style="?android:attr/progressBarStyleHorizontal"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_margin="0dp"
	            android:padding="0dp" />
        </LinearLayout>

        <!-- HEADER -->

        <LinearLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

			<TextView
                android:id="@+id/tvSemaine2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:text="28-5 mar" 
                android:gravity="center"
                android:layout_weight="1"/>
            <Switch
                android:id="@+id/sCm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:switchMinWidth="25dp"
                android:switchPadding="0dp"
                android:text=""
                android:textOff="CM"
                android:textOn="CM"
                android:gravity="center"
                android:layout_weight="1"/>
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">
				<TextView
	                android:id="@+id/tvLabelProchainSite"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="Next : "
	                android:visibility="visible" />
				<TextView
	                android:id="@+id/tvProchainSite"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text=""
	                android:visibility="visible" />
            </LinearLayout>
        </LinearLayout>

        <!-- EDT -->

        <LinearLayout
            android:id="@+id/llEdt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <!-- heures container -->

            <LinearLayout
                android:id="@+id/heures_container"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.6"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/heures_header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >
                    <RelativeLayout
                        android:id="@+id/heures_edt"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" >
                    </RelativeLayout>
                </RelativeLayout>
            </LinearLayout>

            <!-- lundi_container -->

            <LinearLayout
                android:id="@+id/lundi_container"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/lundi_header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <RelativeLayout
                        android:id="@+id/lundi_edt"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" >
                    </RelativeLayout>
                </RelativeLayout>
            </LinearLayout>

            <!-- mardi_container -->

            <LinearLayout
                android:id="@+id/mardi_container"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/mardi_header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <RelativeLayout
                        android:id="@+id/mardi_edt"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" >
                    </RelativeLayout>
                </RelativeLayout>
            </LinearLayout>

            <!-- mercredi_container -->

            <LinearLayout
                android:id="@+id/mercredi_container"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/mercredi_header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <RelativeLayout
                        android:id="@+id/mercredi_edt"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" >
                    </RelativeLayout>
                </RelativeLayout>
            </LinearLayout>

            <!-- jeudi_container -->

            <LinearLayout
                android:id="@+id/jeudi_container"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/jeudi_header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <RelativeLayout
                        android:id="@+id/jeudi_edt"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" >
                    </RelativeLayout>
                </RelativeLayout>
            </LinearLayout>

            <!-- vendredi_container -->

            <LinearLayout
                android:id="@+id/vendredi_container"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/vendredi_header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <RelativeLayout
                        android:id="@+id/vendredi_edt"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" >
                    </RelativeLayout>
                </RelativeLayout>
            </LinearLayout>

            <!-- samedi_container -->

            <LinearLayout
                android:id="@+id/samedi_container"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/samedi_header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <RelativeLayout
                        android:id="@+id/samedi_edt"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" >
                    </RelativeLayout>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>